<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F2F2F2">

    <ImageView
        android:id="@+id/activity_details_user_image_header"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:fitsSystemWindows="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:foreground="@drawable/rounded_shape_b"

        />

    <TextView
        android:id="@+id/activity_details_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/activity_details_user_image_header"
        />
    <TextView
        android:id="@+id/activity_details_github_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Github Profile Link"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/activity_details_username"
        />

</RelativeLayout>